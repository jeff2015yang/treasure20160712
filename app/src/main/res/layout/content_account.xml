<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_200"
    android:background="@drawable/bg_world">
    <com.pkmmte.view.CircularImageView
        android:id="@+id/iv_userIcon_account"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:layout_centerInParent="true"
        android:scaleType="centerInside"
        android:src="@drawable/user_icon"
        app:border="true"
        app:border_color="#16f5f5f5"
        app:border_width="@dimen/dp_8"
        app:selector="true"
        app:selector_color="#4D000000"
        app:selector_stroke_color="#16f5f5f5"
        app:selector_stroke_width="@dimen/dp_8"
        app:shadow="false"
        app:layout_collapseMode="parallax"
        app:layout_collapseParallaxMultiplier="-1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/treasure_expert"
        android:textColor="@android:color/white"
        android:layout_below="@+id/iv_userIcon_account"
        android:layout_marginTop="@dimen/dp_10"
        android:textSize="@dimen/sp_16"/>
</RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_30"
        android:scaleType="fitXY"
        android:src="@drawable/divider_line"/>
    <LinearLayout
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:clickable="true"
        android:background="@drawable/selector_list_item_bg"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/username"
            android:drawableLeft="@drawable/ic_account_circle"
            android:textColor="@android:color/white"
            android:drawablePadding="@dimen/dp_8"
            android:textSize="@dimen/sp_22"
            android:gravity="center_vertical"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:text="@string/treasure_expert"
            android:gravity="center_vertical|right"
            android:drawablePadding="@dimen/dp_8"
            android:drawableRight="@drawable/right_arrow"
            android:textSize="@dimen/sp_22"
            android:padding="@dimen/dp_8"/>
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_1"
        android:scaleType="fitXY"
        android:src="@drawable/divider_line"/>
    <LinearLayout
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:clickable="true"
        android:background="@drawable/selector_list_item_bg"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/password"
            android:drawableLeft="@drawable/ic_lock_white"
            android:textColor="@android:color/white"
            android:drawablePadding="@dimen/dp_8"
            android:textSize="@dimen/sp_22"
            android:gravity="center_vertical"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:text="@string/fake_password"
            android:gravity="center_vertical|right"
            android:drawablePadding="@dimen/dp_8"
            android:drawableRight="@drawable/right_arrow"
            android:textSize="@dimen/sp_22"
            android:padding="@dimen/dp_8"/>
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_1"
        android:scaleType="fitXY"
        android:src="@drawable/divider_line"/>
    <LinearLayout
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:clickable="true"
        android:background="@drawable/selector_list_item_bg"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/version_update"
            android:drawableLeft="@drawable/ic_autorenew"
            android:textColor="@android:color/white"
            android:drawablePadding="@dimen/dp_8"
            android:textSize="@dimen/sp_22"
            android:gravity="center_vertical"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:text=""
            android:gravity="center_vertical|right"
            android:drawableRight="@drawable/right_arrow"
            android:textSize="@dimen/sp_22"
            android:padding="@dimen/dp_8"/>
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_1"
        android:scaleType="fitXY"
        android:src="@drawable/divider_line"/>
    <LinearLayout
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:clickable="true"
        android:background="@drawable/selector_list_item_bg"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/log_out"
            android:drawableLeft="@drawable/ic_return"
            android:textColor="@android:color/white"
            android:drawablePadding="@dimen/dp_8"
            android:textSize="@dimen/sp_22"
            android:gravity="center_vertical"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:text=""
            android:gravity="center_vertical|right"
            android:drawableRight="@drawable/right_arrow"
            android:textSize="@dimen/sp_22"
            android:padding="@dimen/dp_8"/>
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_1"
        android:scaleType="fitXY"
        android:src="@drawable/divider_line"/>
</LinearLayout>